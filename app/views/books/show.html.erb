
<div class="header">
		<div class="header_inner">
			<div class="navi">
				<%if user_signed_in? %>
				  <%=link_to "Home", root_path %>
					<%=link_to "About", root_path %>
					<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
				   <% else %>
				   <%=link_to "Home", root_path %>
				   <%=link_to 'About'%>
					 <%=link_to "Log In", new_user_session_path %>
					<% end %>
				</div>
    </div>
</div>

<div class="container">
<p id="notice"><%= notice %></p>
<h2>Name:</h2><br><br>
<h2><%= @book.name %></h2>

<table class="table">
  <thead>
    <tr>
      <th>Faculty</th>
      <th>Subject</th>
      <th>IT1</th>
      <th>IT2</th>
      <th>AVG</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%@reviews.each do |d|%>
  <tr>
  <td><%=d.faculty%></td>  
  <td><%=d.subject%></td>
  <td><%=d.IT1%></td>
  <td><%=d.IT2%></td>
  <td><%=(d.IT1+d.IT2)/2%></td>
  <td><%=link_to'edit',edit_book_review_path(@book,d)%></td>
  <td><%= link_to 'Delete',[@book,d],method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<%=link_to 'Add',new_book_review_path(@book)%> |
<%= link_to 'Back',books_path %>
</div>