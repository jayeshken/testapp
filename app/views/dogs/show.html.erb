
<div class="header">
		<div class="header_inner">
			<div class="navi">
				<%if user_signed_in? %>
				  <%=link_to "Home", root_path %>
					<%=link_to "About", root_path %>
					<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
				   <% else %>
				   <%=link_to "Home", root_path %>
				   <%=link_to 'About'%>
					 <%=link_to "Log In", new_user_session_path %>
					<% end %>
				</div>
    </div>
</div>

<div class="container">
<p id="notice"><%= notice %></p>
<h2>Name:</h2><br><br>
<h2><%= @dog.name %></h2>

<table class="table">
  <thead>
    <tr>
      <th>Faculty</th>
      <th>Subject</th>
      <th>IT1</th>
      <th>IT2</th>
      <th>IT3</th>
      <th>AVG</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%@cats.each do |d|%>
  <tr>
  <td><%=d.faculty%></td>  
  <td><%=d.subject%></td>
  <td><%=d.IT1%></td>
  <td><%=d.IT2%></td>
  <td><%=d.IT3%></td>
  <% if d.IT1>d.IT3 and d.IT2>d.IT3 %>
  <td><%=(d.IT1+d.IT2)/2%></td>
  <% elsif d.IT1>d.IT2 and d.IT3>d.IT2 %>
  <td><%=(d.IT1+d.IT3)/2%></td>
  <% else %>
  <td><%=(d.IT2+d.IT3)/2%></td>
  <% end %>
  <td><%=link_to'edit',edit_dog_cat_path(@dog,d)%></td>
  <td><%= link_to 'Delete',[@dog,d],method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<%=link_to 'Add',new_dog_cat_path(@dog)%>
<%= link_to 'Edit', edit_dog_path(@dog) %> |
<%= link_to 'Back',dogs_path %>
</div>